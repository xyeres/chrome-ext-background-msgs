{
  "manifest_version": 3,
  "name": "Michael Testing",
  "version": "0.1",
  "description": "Michael Test Extension",
  "action": {
    "default_popup": "index.html"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "tabs",
    "webNavigation"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "*://www.youtube.com/*",
        "*://*.youtube.com/*"
      ],
      "js": [
        "content.js"
      ],
      "all_frames": true
    }
  ],
  "host_permissions": [
    "http://www.youtube.com/"
  ]
}